{
  "name": "job-scheduler",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:api": "tsx watch src/api/server.ts",
    "dev:scheduler": "tsx watch src/scheduler/inprocess.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/api/server.js",
    "db:setup": "docker compose exec -T postgres psql -U postgres -d scheduler -f /docker-entrypoint-initdb.d/schema.sql",
    "dev:dispatcher": "tsx watch src/scheduler/dispatcher.ts",
    "dev:worker": "tsx watch src/worker/worker.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,js,json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "amqplib": "^0.10.4",
    "cron-parser": "^4.9.0",
    "fastify": "^5.0.0",
    "ioredis": "^5.4.1",
    "pg": "^8.12.0",
    "pino": "^9.0.0",
    "uuid": "^9.0.1",
    "yaml": "^2.5.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "@vitest/coverage-v8": "^2.1.3",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.3.3",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  }
}